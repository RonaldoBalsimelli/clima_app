<div class="container mt-5">

<button class="toggle-theme-btn" id="toggle-theme-btn">
🌞
</button>
<h1 class="text-center mb-4">Previsão do Tempo</h1>


  <%= form_with url: '/search', method: 'post', local: true do %>
    <div class="mb-3">
      <%= text_field_tag :city, nil, class: "form-control form-control-lg", placeholder: "Digite o nome da cidade", required: true %>
    </div>
    <%= submit_tag 'Buscar', class: "btn btn-primary btn-lg" %>
  <% end %>

  <% if @temperature && @description %>
    <div class="weather-card">
      <h2><%= @city_name %> - <%= @country %></h2>
      <div class="weather-details">
        <p><strong>Condição:</strong> <%= @description.capitalize %></p>
        <p><strong>Temperatura Atual:</strong> <%= @temperature %>°C</p>
        <p><strong>Sensação Térmica:</strong> <%= @feels_like %>°C</p>
        <p><strong>Temperatura Mínima:</strong> <%= @temp_min %>°C</p>
        <p><strong>Temperatura Máxima:</strong> <%= @temp_max %>°C</p>
        <p><strong>Umidade:</strong> <%= @humidity %>%</p>
        <p><strong>Pressão Atmosférica:</strong> <%= @pressure %> hPa</p>
        <p><strong>Velocidade do Vento:</strong> <%= @wind_speed %> m/s</p>
        <p><strong>Direção do Vento:</strong> <%= @wind_deg %>°</p>
        <p><strong>Nuvens:</strong> <%= @clouds %>%</p>
        <p><strong>Visibilidade:</strong> <%= @visibility %> metros</p>
        <p><strong>Nascer do Sol:</strong> <%= @sunrise %> </p>
        <p><strong>Pôr do Sol:</strong> <%= @sunset %> </p>
      </div>
    </div>
  <% elsif flash[:alert] %>
    <div class="alert alert-danger mt-4">
      <%= flash[:alert] %>
    </div>
  <% end %>
</div>
